{% if success %}

<div class="modal-overlay">

    <div class="modal">
        
        <div class="lottie-animation"></div>
        
        <p>{{ success }}</p>

    </div>
    
</div>

<script src="/scripts/lottie.min.js"></script>

<script>

    const element = document.querySelector('.lottie-animation')
    
    lottie.loadAnimation({
        container: element,
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/assets/success.json'
    })
    
</script>

{% endif %}
