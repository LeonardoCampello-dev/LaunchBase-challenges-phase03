{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <a href="/teachers/create">Novo professor</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Acompanhamento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td>
                    <span style="background-image: url({{ teacher.avatar_url }})"></span>
                    {{ teacher.name }}
                </td>

                <td>
                    {% for subject in teacher.subjects_taught %}
                    <span>{{ subject }}</span>
                    {% endfor %}
                </td>
                
                <td><a href="/teachers/{{ teacher.id }}">Ver professor</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>


{% endblock content %}