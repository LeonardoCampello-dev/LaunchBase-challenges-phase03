<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url }}">
    </div>
</div>

<div class="item">
    <div>Nome Completo</div>
    <div>
        <input type="text" name="name" placeholder="Seu nome aqui" value="{{ teacher.name }}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ teacher.birth }}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="educational_level" placeholder="Seu nível de educação">
            <option value="Ensino Médio Completo">Ensino Médio Completo</option>
            <option value="Ensino Superior Completo">Ensino Superior Completo</option>
            <option value="Mestrado">Mestrado</option>
            <option value="Doutorado">Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input type="checkbox" 
                   name="class_type" 
                   value="Presencial" {% if teacher.class_type == "Presencial"%} 
                        checked="checked" 
                   {% endif %}> Presencial
        </span>
        <span>
            <input type="checkbox" 
                   name="class_type" 
                   value=" À distância" {% if teacher.class_type == " À distância" %} 
                        checked="checked" 
                   {% endif %}> À distância
        </span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="services" placeholder="Separe as áreas de atuação por vírgula" value="{{ teacher.services }}">
    </div>
</div>
<button type="submit" class="save-and-edit">Salvar</button>