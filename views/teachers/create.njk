{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/teachers">
    <section class="avatar"></section>
    <section class="details">
        <h3>Novo professor</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input type="url" name="avatar_url" placeholder="http://">
            </div>
        </div>
        
        <div class="item">
            <div>Nome Completo</div>
            <div>
                <input type="text" name="name" placeholder="Seu nome aqui">
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input type="date" name="birth">
            </div>
        </div>        

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select name="educational_level" placeholder="Seu nível de educação">
                    <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                    <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                    <option value="Mestrado">Mestrado</option>
                    <option value="Doutorado">Doutorado</option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>
                <span><input type="checkbox" name="class_type" value="Presencial">Presencial</span>
                <span><input type="checkbox" name="class_type" value="À distância">À distância</span>
            </div>
        </div>        

        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input type="text" name="services" placeholder="Separe as áreas de atuação por vírgula">
            </div>
        </div>        
        <button type="submit">Salvar</button>
    </section>
</form>


{% endblock content %}